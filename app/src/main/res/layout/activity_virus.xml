<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Virus"
    android:background="#ededed">

    <LinearLayout
        android:id="@+id/container_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/virus"
        android:id="@+id/textView18"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"/>

    <ImageView

        android:id="@+id/imageView69"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="7dp"
        android:onClick="ClickVirus"

        android:background="@drawable/arrowb1" />


    <ListView
        android:id="@+id/listViewvir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search_dis"
        android:layout_alignLeft="@+id/imageView69"
        android:layout_alignStart="@+id/imageView69">
    </ListView>

    <EditText
        android:id="@+id/search_dis"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_toolbar2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:hint="ค้นหาโรค"
        android:orientation="vertical"
        android:textSize="18sp"

        android:layout_marginTop="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="200dp" />



    <Button
        android:id="@+id/finddis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ค้นหา"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"

        android:layout_alignBottom="@+id/search_dis"
        android:layout_alignTop="@+id/search_dis" />





</RelativeLayout>
