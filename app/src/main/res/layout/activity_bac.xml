<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Bacteria"
    android:background="#faf7efef"
    android:layout_width="match_parent">


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbarbac" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/Bacteria"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/listViewฺBacType"
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/bac_search"
        android:layout_alignLeft="@+id/imageView70"
        android:layout_alignStart="@+id/imageView70" />



    <ImageView

        android:id="@+id/imageView70"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="7dp"
        android:onClick="ClickBac"
        android:visibility="visible"
        android:background="@drawable/arrowb1"
         />



    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:onClick="ClickBac"
       />

    <EditText
        android:id="@+id/bac_search"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical|center_horizontal"
        android:hint="ค้นหาโรค"
        android:orientation="vertical"
        android:textSize="18sp"

        android:layout_marginTop="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="200dp" />


    <Button
        android:id="@+id/bac_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bac_search"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/bac_search"
        android:layout_marginRight="10dp"
        android:text="ค้นหา"

        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>