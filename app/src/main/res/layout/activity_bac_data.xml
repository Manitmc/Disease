<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#72c3ec"



    >
    <LinearLayout
        android:id="@+id/container_toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include
            android:id="@+id/toolbarbacdata"
            layout="@layout/toolbarbacdata" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bacteria"
        android:id="@+id/textViewvir1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/BacNameEng"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Bacteria NAME"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="3"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_below="@+id/container_toolbar2"
        android:layout_centerHorizontal="true" />


    <ImageView

        android:id="@+id/imageView69"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:onClick="ClickBacData"
        android:layout_marginTop="7dp"


        android:background="@drawable/arrowb1"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"

        android:background="@drawable/corner_1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"

        android:layout_below="@+id/BacNameEng">


        <TextView
            android:id="@+id/BACDT"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/BacNameEng"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"

            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:text="symptom"
            android:textColor="#ffffff"

            android:textSize="22sp" />


    </ScrollView>


</RelativeLayout>



